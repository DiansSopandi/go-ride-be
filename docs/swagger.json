                "name": {
                    "type": "string",
                    "example": "user"
                }
            }
        },
        "dto.UserCreateRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "Q2Sb9@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "Cilok99!@"
                },
                "roles": {
                    "description": "multiple roles",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "admin",
                        "driver",
                        "user",
                        "superadmin"
                    ]
                },
                "username": {
                    "type": "string",
                    "example": "John Doe"
                }
            }
        },
        "dto.UserRegisterRequest": {
            "type": "object",
            "required": [
                "email",
                "password",
                "password_confirm",
                "roles",
                "username"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "Q2Sb9@example.com"
                },
                "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "Cilok99!@"
                },
                "password_confirm": {
                    "type": "string",
                    "example": "Cilok99!@"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "user"
                    ]
                },
                "username": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 3,
                    "example": "John Doe"
                }
            }
        },
